<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:DietHelper.ViewModels.Dishes"
        xmlns:local="clr-namespace:DietHelper.Views.Dishes"
		xmlns:manual="clr-namespace:DietHelper.Views"
        mc:Ignorable="d"
        x:Class="DietHelper.Views.Dishes.AddDishWindow"
        Title="Добавить блюдо" Height="800" Width="900"
        x:DataType="vm:AddUserDishViewModel"
        WindowStartupLocation="CenterScreen">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<StackPanel Grid.Row="0" Margin="0 5 0 0">
			<TextBox Watermark="Поиск блюда"
                     Text="{Binding SearchText, Delay=400}"/>
			<ProgressBar IsIndeterminate="True"
                        IsVisible="{Binding IsBusy}"/>
		</StackPanel>

		<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible">
			<ListBox ItemsSource="{Binding UserSearchResults}"
                    SelectedItem="{Binding SelectedUserItem}">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<StackPanel Orientation="Horizontal">
							<local:UserDishView/>
							<Button Content="Забыть"
									Command="{Binding $parent[Window].DataContext.DeleteItemFromDatabaseCommand}"
									CommandParameter="{Binding}"
									HorizontalAlignment="Center"
									VerticalAlignment="Center"/>
						</StackPanel>						
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</ScrollViewer>

		<Button Grid.Row="2"
                Content="Добавить блюдо"
                Command="{Binding AddUserItemCommand}"
                HorizontalAlignment="Center"
                Margin="0 5 0 5"/>

		<manual:AddItemManuallyView Grid.Row="3" />

		<Button Grid.Row="4"
                Content="Создать блюдо"
                Command="{Binding AddManualItemCommand}"
                HorizontalAlignment="Center"
                Margin="0 5 0 10"/>
	</Grid>
</Window>